@model IEnumerable<ASDataContext.Company>

@{
    ViewBag.Title = "Мои компании";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить", "CompanyAdd")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkToDetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebSiteUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkToDetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebSiteUrl)
        </td>
        <td>
            @Html.ActionLink("Править", "CompanyEdit", new { id=item.Id}) 
        </td>
    </tr>
}

</table>
